<Application x:Class="CarRepairShopSolution.UI.Win.App"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:local="clr-namespace:CarRepairShopSolution.UI.Win"
              xmlns:views="clr-namespace:CarRepairShopSolution.UI.Win.Views"
              xmlns:viewModels="clr-namespace:CarRepairShopSolution.UI.Win.ViewModels">
    
    <Application.Resources>
        <ResourceDictionary>
            
            <DataTemplate DataType="{x:Type viewModels:HomePageViewModel}">
                <views:HomePage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ViewAndAddClientsViewModel}">
                <views:ViewAndAddClients />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ViewAndAddCarsViewModel}">
                <views:ViewAndAddCars />
            </DataTemplate>


        </ResourceDictionary>

    </Application.Resources>

</Application>
